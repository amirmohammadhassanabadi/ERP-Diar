<body>
  <header>
    <div class="menu__btn" data-animation="0">
      <i class="fa-solid fa-bars fa-2xl" style="color: #cfab5d;"></i>
    </div>
    <img class="header__logo" src="/img/logo/logo-low.png" alt="logo-png" />
    <div class="header__profile">

      <form action="/auth/logout" method="get">
        <button type="submit" class="logout__btn">
          <span>خروج</span>
          <i class="fa-solid fa-arrow-right-from-bracket fa-lg"></i>
        </button>
      </form>

      <span id="profile_img"></span>
      <span id="profile_name"></span>
    </div>
  </header>
  <main>
    <div class="menu">
      <ul class="menu__list">
        <li class="menu__item menu__dashboard">
          <i class="fa-solid fa-house" style="color: #cf564c"></i>
          <span>داشبورد</span>
        </li>
        <div class="divider"></div>
        <li class="menu__item menu__tasks">
          <i class="fa-solid fa-circle-check" style="color: #2c9e66"></i>
          <span>وظایف</span>
        </li>
      </ul>
    </div>
    <div class="container">
    </div>
  </main>

  <div class="overlay hidden">
    <div class="popup__container">
      <!-- <div class="popup--task-content"> -->
      <div class="popup__upside">
        <p class="popup-text">ایجاد وظیفه</p>
        <div class="task__title">
          <p class="title-text">عنوان فعالیت جدید</p>
          <input class="title-input" type="text" placeholder="عنوان فعالیت جدید..." />
          <p class="title-text">توضیحات</p>
          <textarea name="descInput" id="descInput" placeholder="توضیحات"></textarea>
        </div>
        <ul class="options__list">
          <input class="task__btn" type="text" data-jdp data-jdp-only-date id="dateInput" placeholder="زمان اتمام وظیفه"
            autocomplete="off">
          <div style="display: inline-block;">
            <button class="agent-btn task__btn" tabindex="0">
              <i class="fa-solid fa-user fa-xl" style="color: #888888"></i>
              مسئول انجام
            </button>
            <div class="user__display">
            </div>
          </div>
          <div class="popup__overlay hidden"></div>
        </ul>
      </div>
      <div class="popup__downside">
        <button class="cancel__btn">انصراف</button>
        <button class="submit__btn">ثبت</button>
        <!-- onclick="getInputValue()" -->
      </div>
      <!-- </div> -->
    </div>
  </div>
  <div class="confirm__overlay hidden">
    <div class="popup__container">
      <div class="popup__confirm__up">
        <p class="popup-text">آیا از این تصمیم مطمئن هستید؟</p>
      </div>
      <div class="popup__confirm__down">
        <button class="confirm__btn">بله</button>
        <button class="noconfirm__btn">خیر</button>

      </div>
    </div>
  </div>

  <div class="referPopupWrapper dis-none">
    <input type="hidden">
    <div class="referPopup">
      <h3>
        ارجاع تسک
      </h3>
      <button class="agentBtn">
        مسئول انجام
        <div id="referUserPoppup" class="dis-none">


        </div>
      </button>
      <div class="user__display">
      </div>
      <textarea name="report" id="reportTestarea" placeholder="توضیحات"></textarea>

      <div class="btn-wrapper">
        <button class="cancelBtn">
          انصراف
        </button>
        <button class="submitBtn">
          ثبت
        </button>
      </div>
    </div>
  </div>

