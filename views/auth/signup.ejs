<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sign up</title>
    <link rel="shortcut icon" href="/img/logo/logo-low.png" />
    <link rel="stylesheet" href="/css/config/variables.css" />
    <link rel="stylesheet" href="/css/config/font.css">
    <link rel="stylesheet" href="/css/includes/top-line.css" />
    <link rel="stylesheet" href="/css/signup.css" />
  </head>
  <body>
    <div class="page-container">
      <%- include("../includes/top-line.ejs") %>
      <div class="top"></div>
      <div class="bottom"></div>
      <!-- ---------------------------- -->
      <div class="login-wrapper">
        <div class="logo-wrapper"> 
          <img src="/img/logo/logo-low.png" alt="" />
        </div>

        <div class="input-wrapper">
          <input type="text" placeholder="username" id="usernameInput" />

          <label for="#department">
          </label>
          <select name="department" id="department">
            <% if (level[0] - 1 == 1 ) { %>
              <% for( let i = 0; i < department.length; i++ ) { %>
              <option value="<%= department[i] %>"><%= department[i] %></option>
              <% } %>
            <% }else{ %>
              <option value="<%= department %>"><%= department %></option>
            <% } %>
          </select>

          <label for="#level">
            User Level
          </label>
          <select name="level" id="level">
            <% for( let i = 0; i < level.length; i++ ) { %>
              <option value="<%= level[i] %>"><%= level[i] %></option>
              <% } %>
          </select>
          <button id="signUpBtn">Sign Up</button>
        </div>
      </div>
      <!-- ---------------------------- -->
      <div class="alert-wrapper">
        <div class="main-alert">
          <h3 dir="rtl">
            
          </h3>
        </div>
      </div>
    </div>

    <script src="/js/packages/fa.min.js" crossorigin="anonymous"></script>
    <script type="module" src="/js/auth/signup.js"></script>
  </body>
</html>